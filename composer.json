{
    "name": "lihq1403/sdk-base",
    "description": "作为 SDK 的基础包，提供通用组件能力，允许被替换",
    "license": "MIT",
    "authors": [
        {
            "name": "lihq1403",
            "email": "lihqing1403@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "pimple/pimple": "^3.0",
        "adbario/php-dot-notation": "^3.0|^2.0",
        "guzzlehttp/guzzle": "^6.0|^7.0",
        "psr/log": "*",
        "psr/simple-cache": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "Lihq1403\\SdkBase\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lihq1403\\SdkBase\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1",
        "test": "./vendor/bin/phpunit"
    }
}